<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.ch05.mapper.User4Mapper">

    <insert id="insertUser4">
        INSERT INTO USER4 VALUES (#{name},#{gender},#{age},#{addr})
    </insert>

    <select id="selectAllUser4" resultType="kr.co.ch05.dto.User4DTO">
        select * from USER4
    </select>
    <select id="selectUser4" resultType="kr.co.ch05.dto.User4DTO">
        select * from USER4 WHERE name=#{name}
    </select>
    <update id="updateUser4">
        UPDATE USER4 SET
            gender=#{gender},
            age=#{age},
            addr=#{addr}
         WHERE
            name=#{name}
    </update>
    <delete id="deleteUser4">
        DELETE FROM USER4 WHERE name=#{name}
    </delete>
</mapper>